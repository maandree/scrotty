RUNTIME DEPENDENCIES:

	linux
	libc
	imagemagick (opt-out)


BUILD DEPENDENCIES:

	make
	coreutils
	libc
	gcc
	gettext (opt-out, for internationalisation)
	texinfo (opt-out, for info, pdf, dvi, ps, and html manuals)
	texlive-plainextra (opt-in, for pdf, dvi, and ps manuals)


INSTALL DEPENDENCIES:

	make
	coreutils

